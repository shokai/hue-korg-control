{
  "parser": "babel-eslint",
  "env":{
    "node": true,
    "browser": true
  },
  "rules":{
    "strict": [2, "global"],
    "new-cap": 0,
    "comma-spacing": [2, {"before": false, "after": true}],
    "no-unused-vars": 1,
    "no-constant-condition": 0,
    "no-shadow": 0,
    "no-loop-func": 0,
    "curly": 0
  }
}
